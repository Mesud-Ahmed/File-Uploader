
  <div class="container mt-4">
    <h3>Your Folders</h3>
    <a href="/folders/new" class="btn btn-primary mb-3">+ New Folder</a>

    <% if (folders.length === 0) { %>
      <p>No folders yet.</p>
    <% } else { %>
      <ul class="list-group">
        <% folders.forEach(folder => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong><%= folder.name %></strong>
              <small class="text-muted">(Files: <%= folder.files.length %>)</small>
            </div>
            <form action="/folders/<%= folder.id %>/delete" method="POST" style="margin:0">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

