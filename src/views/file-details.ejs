<h3 class="mb-3">File Details</h3>

<div class="card">
  <div class="card-body">
    <p><strong>Filename:</strong> <%= file.originalName %></p>
    <p><strong>Type:</strong> <%= file.mimeType %></p>
    <p><strong>Size:</strong> <%= (file.size / 1024).toFixed(2) %> KB</p>
    <p><strong>Uploaded:</strong> <%= file.createdAt.toDateString() %></p>
    <% if (file.folder) { %>
      <p><strong>Folder:</strong> <%= file.folder.name %></p>
    <% } %>

    <a href="/files/<%= file.id %>/download" class="btn btn-primary">
      Download File
    </a>
    <a href="/dashboard" class="btn btn-secondary">Back</a>
  </div>
</div>
