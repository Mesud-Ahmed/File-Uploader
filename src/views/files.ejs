<h3 class="mb-3">Your Files</h3>

<% if (!files || files.length === 0) { %>
  <p>No files uploaded yet.</p>
<% } else { %>
  <div class="list-group">
    <% files.forEach(file => { %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= file.originalName %></strong>
          <div class="text-muted small">
            <%= file.mimeType %> • <%= (file.size / 1024).toFixed(2) %> KB
            <% if (file.folder) { %> • Folder: <%= file.folder.name %> <% } %>
          </div>
        </div>

        <div class="btn-group" role="group" aria-label="actions">
          <a href="/files/<%= file.id %>" class="btn btn-sm btn-outline-info">Details</a>
          <a href="/files/<%= file.id %>/download" class="btn btn-sm btn-outline-primary">Download</a>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<div class="mt-3">
  <a href="/upload" class="btn btn-success">Upload New File</a>
  <a href="/folders" class="btn btn-secondary">Manage Folders</a>
</div>
